<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wms.mapper.InventoryMapper">

    <resultMap id="BaseResultMap" type="com.wms.entity.Inventory">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="material_code" property="materialCode" jdbcType="VARCHAR"/>
        <result column="material_name" property="materialName" jdbcType="VARCHAR"/>
        <result column="quantity" property="quantity" jdbcType="INTEGER"/>
        <result column="warehouse_code" property="warehouseCode" jdbcType="VARCHAR"/>
        <result column="location_code" property="locationCode" jdbcType="VARCHAR"/>
        <result column="batch_number" property="batchNumber" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory ORDER BY create_time DESC
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory WHERE id = #{id}
    </select>

    <select id="findByMaterialCode" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory WHERE material_code = #{materialCode}
    </select>
    
    <!-- 分页查询所有库存记录 -->
    <select id="findAllByPage" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory
        ORDER BY id ASC 
        LIMIT #{offset}, #{pageSize}
    </select>
    
    <!-- 获取所有库存记录总数 -->
    <select id="findTotalCount" resultType="java.lang.Long">
        SELECT COUNT(*) FROM wms_inventory
    </select>
    
    <!-- 分页查询指定物料编码的库存记录 -->
    <select id="findByMaterialCodeByPage" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory 
        WHERE material_code = #{materialCode}
        ORDER BY id ASC 
        LIMIT #{offset}, #{pageSize}
    </select>
    
    <!-- 获取指定物料编码的库存记录总数 -->
    <select id="findTotalCountByMaterialCode" parameterType="java.lang.String" resultType="java.lang.Long">
        SELECT COUNT(*) FROM wms_inventory WHERE material_code = #{materialCode}
    </select>
    
    <!-- 多条件分页查询库存记录 -->
    <select id="findByConditionsPage" resultMap="BaseResultMap">
        SELECT * FROM wms_inventory
        <where>
            <if test="materialCode != null and materialCode != ''">
                AND material_code LIKE CONCAT('%', #{materialCode}, '%')
            </if>
            <if test="materialName != null and materialName != ''">
                AND material_name LIKE CONCAT('%', #{materialName}, '%')
            </if>
            <if test="warehouseCode != null and warehouseCode != ''">
                AND warehouse_code LIKE CONCAT('%', #{warehouseCode}, '%')
            </if>
            <if test="locationCode != null and locationCode != ''">
                AND location_code LIKE CONCAT('%', #{locationCode}, '%')
            </if>
            <if test="batchNumber != null and batchNumber != ''">
                AND batch_number LIKE CONCAT('%', #{batchNumber}, '%')
            </if>
        </where>
        ORDER BY id ASC
        LIMIT #{offset}, #{pageSize}
    </select>
    
    <!-- 获取多条件查询的库存记录总数 -->
    <select id="findTotalCountByConditions" resultType="java.lang.Long">
        SELECT COUNT(*) FROM wms_inventory
        <where>
            <if test="materialCode != null and materialCode != ''">
                AND material_code LIKE CONCAT('%', #{materialCode}, '%')
            </if>
            <if test="materialName != null and materialName != ''">
                AND material_name LIKE CONCAT('%', #{materialName}, '%')
            </if>
            <if test="warehouseCode != null and warehouseCode != ''">
                AND warehouse_code LIKE CONCAT('%', #{warehouseCode}, '%')
            </if>
            <if test="locationCode != null and locationCode != ''">
                AND location_code LIKE CONCAT('%', #{locationCode}, '%')
            </if>
            <if test="batchNumber != null and batchNumber != ''">
                AND batch_number LIKE CONCAT('%', #{batchNumber}, '%')
            </if>
        </where>
    </select>
</mapper>
